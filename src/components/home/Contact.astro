---
import WebSite from "../icons/LocationIcon.astro";
import PhoneIcon from "../icons/PhoneIcon.astro";
import Location from "../../components/icons/Location.astro";
import EmailIcon from "../icons/EmailIcon.astro";
---

<section id="contact" class="py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
    <div class="animate-on-scroll">
      <div class="flex items-center gap-2 text-primary-400 mb-4">
        <div class="h-px w-12 bg-primary-400"></div>
        <span class="font-mono text-sm tracking-wider">CONTACTO</span>
      </div>

      <h2 class="text-3xl sm:text-4xl font-bold mb-12">
        ¿Interesado en <span class="text-primary-400">trabajar juntos</span>?
      </h2>
    </div>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      <div class="animate-on-scroll">
        <form
          id="contact-form"
          class="space-y-6"
          action="https://formspree.io/f/meokljzj"
          method="POST"
        >
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-zinc-300 mb-1"
              >Nombre completo</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-dark-100 border border-zinc-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all text-white"
              placeholder="Tu nombre"
            />
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-medium text-zinc-300 mb-1"
              >Correo electrónico</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-dark-100 border border-zinc-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all text-white"
              placeholder="ejemplo@email.com"
            />
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-medium text-zinc-300 mb-1"
              >Mensaje</label
            >
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 bg-dark-100 border border-zinc-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all text-white resize-none"
              placeholder="Escribe tu mensaje aquí..."></textarea>
          </div>

          <button
            type="submit"
            class="px-6 py-3 bg-primary-600 text-white rounded-lg transition-all hover:bg-primary-500 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-dark-300 font-medium"
          >
            Enviar mensaje
          </button>
        </form>
      </div>

      <div class="animate-on-scroll delay-300">
        <div class="bg-dark-100 border border-zinc-800 rounded-xl p-8">
          <h3 class="text-xl font-bold mb-6">Información de contacto</h3>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="bg-dark-200 p-3 rounded-lg text-primary-400">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-5 h-5"
                  ><path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                  ></path></svg
                >
              </div>
              <div>
                <h4 class="text-sm font-medium text-zinc-300">Teléfono</h4>
                <p class="text-zinc-400">+591 64854829</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="bg-dark-200 p-3 rounded-lg text-primary-400">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-5 h-5"
                  ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                    d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
                >
              </div>
              <div>
                <h4 class="text-sm font-medium text-zinc-300">Email</h4>
                <p class="text-zinc-400">wawxper08@gmail.com</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="bg-dark-200 p-3 rounded-lg text-primary-400">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-5 h-5"
                  ><circle cx="12" cy="12" r="10"></circle><line
                    x1="2"
                    x2="22"
                    y1="12"
                    y2="12"></line><path
                    d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
                  ></path></svg
                >
              </div>
              <div>
                <h4 class="text-sm font-medium text-zinc-300">Ubicación</h4>
                <p class="text-zinc-400">Cochabamba, Bolivia</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
