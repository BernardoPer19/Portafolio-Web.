---
import GitHubIcon from "../icons/GitHubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
---

<footer class="border-t border-zinc-800 mt-16 py-6 px-4 sm:px-6 md:px-8">
  <div
    class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4"
  >
    <p class="text-zinc-400 text-sm">
      © {new Date().getFullYear()} Agustín Bernardo Peredo Rodriguez
    </p>
    <div class="flex gap-6">
      <a
        target="_blank"
        href="https://www.linkedin.com/in/bernardo-peredo-50a1552a0/"
      >
        <LinkedInIcon />
      </a>
      <a target="_blank" href="https://github.com/BernardoPer19">
        <span class="sr-only">GitHub</span>
        <GitHubIcon />
      </a>
    </div>
  </div>
</footer>
