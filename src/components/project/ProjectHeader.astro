---
const { project } = Astro.props;
const { title, description, type } = project;
---

<div class="mb-8">
  <span
    class="inline-block px-3 py-1 bg-primary-900/30 text-primary-400 text-xs rounded-full mb-4 font-medium"
  >
    {type}
  </span>
  <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
    {title}
  </h1>
  
  <p class="text-xl text-zinc-300 max-w-3xl">{description}</p>
</div>
