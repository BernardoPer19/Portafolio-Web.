---
const { project } = Astro.props;
const {
  technologies = [],
  type = "No especificado",
  duration = "No especificado",
  collaborative = false,
} = project;
---

<div class="bg-dark-100 border border-zinc-800 rounded-xl p-6 h-fit">
  <h2 class="text-xl font-bold mb-4">Información del proyecto</h2>

  <div class="space-y-4">
    <div>
      <h3 class="text-sm font-medium text-zinc-400 mb-2">
        Tecnologías utilizadas
      </h3>
      <div class="flex flex-wrap gap-2">
        {
          technologies.map((tech: any) => (
            <span class="px-2 py-1 text-xs font-medium bg-dark-200 text-primary-400 rounded-full">
              {tech}
            </span>
          ))
        }
      </div>
    </div>

    <section class="grid grid-cols-2 sm:grid-cols-2 gap-8 mb-6 mt-4">
      <div>
        <h3 class="text-sm font-medium text-zinc-200 mb-1">Tipo de proyecto</h3>
        <p class="text-zinc-400">{type}</p>
      </div>
      <div>
        <h3 class="text-sm font-medium text-zinc-200 mb-1">
          Tiempo de desarrollo
        </h3>
        <p class="text-zinc-400">{duration}</p>
      </div>
      <div>
        <h3 class="text-sm font-medium text-zinc-200 mb-1">¿Colaborativo?</h3>
        <p class="text-zinc-400 mt-3">{collaborative ? "Sí" : "No"}</p>
      </div>
    </section>
    <h3 class="text-md font-medium text-zinc-200 mb-2">Enlaces</h3>
    <div class="flex flex-col gap-2">
      <a
        href={project.demoUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-sm font-medium text-primary-400 hover:text-primary-300 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-4 h-4"
        >
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
          ></path>
          <path d="M15 3h6v6"></path>
          <path d="m10 14 11-11"></path>
        </svg>
        <span>
          {
            project.demoUrl && project.demoUrl.trim() !== ""
              ? "Ver demo en vivo"
              : "Aún no está en producción"
          }
        </span>
      </a>
      <a
        href={project.repoUrl ? project.repoUrl : "An no esta en producción"}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 mt-3 text-sm font-medium text-primary-400 hover:text-primary-300 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-4 h-4"
        >
          <path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path>
          <path d="M9 18c-4.51 2-5-2-7-2"></path>
        </svg>
        <span>Ver código fuente</span>
      </a>
    </div>
  </div>
</div>
